@model IEnumerable<AllInOne.Entity.Models.Popup.EmployeePopup>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>
<div id="placeHolderHere"></div>

<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
    Add New
</button>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th></th>
        </tr>
    </thead>
    @if (Model.Any())
    {
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Age)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Address)
                    </td>
                    <td>
                        <button type="button" class="btn btn-primary" data-toggle="ajax-modal" data-target="#addEmployee"
                                data-url="@Url.Action($"Edit/{item.Id}")">
                            Edit
                        </button> |
                        <button type="button" class="btn btn-primary" data-toggle="ajax-modal" data-target="#addEmployee"
                                data-url="@Url.Action($"Details/{item.Id}")">
                            Edit
                        </button> |
                        <button type="button" class="btn btn-primary" data-toggle="ajax-modal" data-target="#addEmployee"
                                data-url="@Url.Action($"Delete/{item.Id}")">
                            Edit
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    }
</table>


<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <form method="POST" asp-controller="Popup" asp-action="Create">
            @Html.RenderPartialAsync("_EmployeeModalPartial",new EmployeePopup());
        </form>
    </div>
</div>

