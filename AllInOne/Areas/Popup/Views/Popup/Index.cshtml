@model IEnumerable<AllInOne.Entity.Models.Popup.EmployeePopup>

@{
    ViewData["Title"] = "Employee List";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var Sn = 0;
}

<h1>Employee List</h1>
<div id="placeHolderHere"></div>
<div class="pb-2">
    <button type="button" class="btn btn-sm btn-outline-primary" data-toggle="ajax-modal" data-target="#addEmployee"
            data-url="@Url.Action("Create")">
        Add New
    </button>
</div>
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>
                Sn.
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Any())
        {
            @foreach (var item in Model)
            {
                Sn++;
                <tr>
                    <td>
                        @Sn
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Age)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Address)
                    </td>
                    <td>
                        <button type="button" class="btn btn-sm btn-outline-primary" data-toggle="ajax-modal" data-target="#addEmployee"
                                data-url="@Url.Action($"Edit/{item.Id}")">
                            Edit
                        </button> |
                        <button type="button" class="btn btn-sm btn-outline-danger" data-toggle="ajax-delete" data-target="#addEmployee"
                                data-url="@Url.Action($"Delete/{item.Id}")">
                            Delete
                        </button>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="4">No Record Found !!</td>
            </tr>
        }
    </tbody>
</table>

